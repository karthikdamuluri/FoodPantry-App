<h1>Donations list</h1>

<p>
  {{link-to "New Donation" "donations.new" }}
</p>

{{#if model.length}}
  <table>
    <thead>
      <tr>
        <th>
          Item
        </th>
        <th>
          Donor
        </th>
        <th>
          Quantity
        </th>
        <th>
          Receiveddate
        </th>
        <th colspan="3">
          Actions
        </th>
      </tr>
    </thead>
    <tbody>
      {{#each model as |donation|}}
        <tr>
          <td>
            {{donation.item}}
          </td>
          <td>
            {{donation.donor}}
          </td>
          <td>
            {{donation.quantity}}
          </td>
          <td>
            {{donation.receiveddate}}
          </td>
          <td>
            {{link-to "Edit" "donations.edit" donation}}
          </td>
          <td>
            {{link-to "Show" "donations.show" donation}}
          </td>
          <td>
            <a href="#" {{action "remove" donation}}>Remove</a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <p id="blankslate">
    No Donations found
  </p>
{{/if}}
