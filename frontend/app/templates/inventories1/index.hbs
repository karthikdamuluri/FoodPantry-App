
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">

<div class="row">
  <h2 style="padding-left:15px">Inventory Information</h2>

</div>
  <style>
      body{
         background-color:beige;
      }
  </style>

<div>
  {{#if model.length}}
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr class="bg-info">
          <th>Itemcode</th>
          <th>Itemname</th>

          <th colspan="4">
            Actions
          </th>
        </tr>
      </thead>
      <tbody>
        {{#each model as |inventory|}}
          <tr>
            <td>
              {{inventory.itemcode}}
            </td>
            <td>
              {{inventory.itemname}}
            </td>

            <td>
              {{link-to "Edit" "inventories1.edit" inventory}}
            </td>
            <td>
              {{link-to "Show" "inventories1.show" inventory}}
            </td>
            <td>
              <a href="#" {{action "remove" inventory}}>Remove</a>
            </td>
            <td>
              {{#link-to "itemstotal" class="btn btn-primary"}}
              Total
              {{/link-to}}
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
      <div class="row">
        {{#link-to "inventories1.new" class="button"}}
          Add Inventories
        {{/link-to}}
      </div>

  {{else}}
    <p id="blankslate">
      No Inventories found
    </p>
  {{/if}}

</div>
