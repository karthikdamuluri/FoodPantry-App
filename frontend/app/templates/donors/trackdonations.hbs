<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">

<style>
    body{
       background-color:beige;
    }
</style>

    <div class="row">
        <h2 style="padding-left: 15Px">Donation Information</h2>
    </div>
    <div>
        <table class="table table-striped table-bordered table-hover">
            <thead>
            <tr class="bg-info">

                <th>Item Name</th>
                <th>Donor Name</th>
                <th>Item Quantity</th>
                <th>Received Date</th>
            </tr>
            </thead>
            <tbody>
            {{#each model as |donation|}}
                <tr>
                    <td>{{ donation.item.itemname }}</td>
                    <td>{{ donation.donor.donorname }}</td>
                    <td>{{ donation.quantity }}</td>
                    <td>{{ donation.receiveddate }}</td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    </div>
