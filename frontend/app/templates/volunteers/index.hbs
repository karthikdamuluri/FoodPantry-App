<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">

<div class="row">
  <h2 style="padding-left:15px">Volunteers Information</h2>


</div>
  <style>
    body {
        background-color: beige;
    }
  </style>
<div>
  {{#if model.length}}
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr class="bg-info">
          <th>Vol number</th>
          <th>Last Name</th>
          <th>First name</th>
          <th>Volunteer dob</th>
          <th>Address</th>
          <th>City</th>
          <th>State</th>
          <th>Zipcode</th>
          <th>Email</th>
          <th>Cell phone</th>
          <th>Notes</th>
          <th colspan="3">
            Actions
          </th>
        </tr>
      </thead>
      <tbody>
        {{#each model as |volunteer|}}
          <tr>
            <td>{{volunteer.volnumber}}</td>
            <td>{{volunteer.lname}}</td>
            <td>{{volunteer.fname}}</td>
            <td>{{volunteer.voldob}}</td>
            <td>{{volunteer.address}}</td>
            <td>{{volunteer.city}}</td>
            <td>{{volunteer.state}}</td>
            <td>{{volunteer.zipcode}}</td>
            <td>{{volunteer.email}}</td>
            <td>{{volunteer.cellphone}}</td>
            <td>{{volunteer.volnotes}}</td>
            <td>
              {{link-to "Edit" "volunteers.edit" volunteer}}
            </td>
            <td>
              {{link-to "Show" "volunteers.show" volunteer}}
            </td>
            <td>
              <a href="#" {{action "remove" volunteer}}>Delete</a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>

        <div class="row">
            {{#link-to "volunteers.new" class="button"}}
              Add Volunteer
            {{/link-to}}
        </div>
  {{else}}
    <p id="blankslate">
      No Volunteers found
    </p>
  {{/if}}
</div>
