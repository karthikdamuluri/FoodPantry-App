<h1>Volunteers list</h1>

<p>
  {{#link-to "volunteers.new" class="button"}}
    Add Volunteer list
  {{/link-to}}
</p>
<style>
tr.bold {
  font-size: 130%;
  color: red;
}
</style>

{{#if model.length}}
  <table>
    <thead>
      <tr class=bold>
        <th>
          Vol number
        </th>
        <th>
          Last Name
        </th>
        <th>
          First name
        </th>
        <th>
          Volunteer dob
        </th>
        <th>
          Address
        </th>
        <th>
          City
        </th>
        <th>
          State
        </th>
        <th>
          Zipcode
        </th>
        <th>
          Email
        </th>
        <th>
          Cell phone
        </th>
        <th>
          Notes
        </th>
        <th colspan="3">
          Actions
        </th>
      </tr>
    </thead>
    <tbody>
      {{#each model as |volunteer|}}
        <tr>
          <td>
            {{volunteer.volnumber}}
          </td>
          <td>
            {{volunteer.lname}}
          </td>
          <td>
            {{volunteer.fname}}
          </td>
          <td>
            {{volunteer.voldob}}
          </td>
          <td>
            {{volunteer.address}}
          </td>
          <td>
            {{volunteer.city}}
          </td>
          <td>
            {{volunteer.state}}
          </td>
          <td>
            {{volunteer.zipcode}}
          </td>
          <td>
            {{volunteer.email}}
          </td>
          <td>
            {{volunteer.cellphone}}
          </td>
          <td>
            {{volunteer.volnotes}}
          </td>
          <td>
            {{link-to "Edit" "volunteers.edit" volunteer}}
          </td>
          <td>
            {{link-to "Show" "volunteers.show" volunteer}}
          </td>
          <td>
            <a href="#" {{action "remove" volunteer}}>Delete</a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <p id="blankslate">
    No Volunteers found
  </p>
{{/if}}
