<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">

<div class="row">
  <h2 style="padding-left:15px">Inventory Information</h2>

</div>
  <style>
      body{
         background-color:beige;
      }
  </style>


<div>

  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr class="bg-info">

        <th>Item Name</th>
        <th>ItemQuantity</th>
        <th>Received Date</th>

      </tr>
    </thead>
    <tbody>
      {{#each model as |donation|}}
        <tr>
           <td>{{ donation.item.itemname }}</td>
           <td>{{ donation.quantity }}</td>
           <td>{{ donation.receiveddate }}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>

  <div>
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr class="bg-info">

           <th>Total acquired items from donations</th>
        </tr>

      </thead>
      <tbody>

          <tr>
             <td>{{ sumitems.quantity__sum }}</td>

          </tr>
      </tbody>
    </table>
  </div>
