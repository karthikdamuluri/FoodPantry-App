<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">

<div class="row">
  <h2 style="padding-left:15px">Donor Information</h2>

</div>
  <style>
      body{
         background-color:beige;
      }
  </style>

<div>
  {{#if model.length}}
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr class="bg-info">
          <th>Donorname</th>
          <th>Joindate</th>
          <th>Email</th>
          <th>Notes</th>
          <th colspan="3">
            Actions
          </th>
        </tr>
      </thead>
      <tbody>
        {{#each model as |donor|}}
          <tr>
            <td>{{donor.donorname}}</td>
            <td>{{donor.joindate}}</td>
            <td>{{donor.email}}</td>
            <td>{{donor.notes}}</td>
            <td>
              {{link-to "Edit" "donors1.edit" donor}}
            </td>
            <td>
              {{link-to "Show" "donors1.show" donor}}
            </td>
            <td>
              <a href="#" {{action "remove" donor}}>Delete</a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>

        <div class="row">
            {{#link-to "donors1.new" class="button"}}
              Add Donor
            {{/link-to}}
        </div>
  {{else}}
    <p id="blankslate">
      No Donors found
    </p>
  {{/if}}

</div>
